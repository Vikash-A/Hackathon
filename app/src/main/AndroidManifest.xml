<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaya.hackthaonproject">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Features"
            android:theme="@style/AppTheme.NoActionBars" />
        <activity android:name=".Call" />
        <activity
            android:name=".Register"
            android:theme="@style/AppTheme.NoActionBars" />
        <activity android:name=".success">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jaya.hackthaonproject.Register" />
        </activity>
        <activity android:name=".failure" />
        <activity
            android:name=".show"
            android:theme="@style/AppTheme.NoActionBars" />
        <activity android:name=".Demand" />
        <activity
            android:name=".About"
            android:theme="@style/AppTheme.NoActionBars" />
        <activity android:name=".AddDemand"></activity>
    </application>

</manifest>